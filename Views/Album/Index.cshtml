@model List<Album>;
    <h1 class="text-center mb-3">Álbuns Cadastradas</h1>

    <div class="text-center"><a asp-action="Create" class="btn botao text-center mb-3">Cadastrar Álbum</a></div>

<table class="table table-dark table-striped">
    <th scope="col">Nome</th>
    <th scope="col">Lançamento</th>
    <th scope="col">Editar</th>
    <th scope="col">Excluir</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var album in Model)
        {
            <tr>
            <th scope="row">@album.Nome</th>
            <td>@album.DataLancamento</td>
            <td><a asp-action="Edit" asp-controller="Album" asp-route-id="@album.IdAlbum">Editar</a></td>
            <td><a asp-action="Delete" asp-controller="Album" asp-route-id="@album.IdAlbum">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>