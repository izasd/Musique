@model List<Gravacao>;
    <h1 class="text-center mb-3">Gravações Cadastradas</h1>

    <div class="text-center"><a asp-action="Create" class="btn botao text-center mb-3">Cadastrar nova gravação</a></div>

<table class="table table-dark table-striped">
    <th scope="col">Artista</th>
    <th scope="col">Nome</th>
    <th scope="col">Lançamento</th>
    <th scope="col">Duração</th>
    <th scope="col">Detalhes</th>
    <th scope="col">Delete</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var gravacao in Model)
        {
            <tr>
            <th scope="row">@gravacao.Artista.Nome</th>
            <th>@gravacao.Musica.Nome</th>
            <td>@gravacao.DataLancamento</td>
            <td>@gravacao.Duracao</td>
            <td><a asp-action="Edit" asp-controller="Gravacao" asp-route-id="@gravacao.IdGravacao">Editar</a></td>
            <td><a asp-action="Delete" asp-controller="Gravacao" asp-route-id="@gravacao.IdGravacao">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>