@model Artista;

<div class="col-6 col-xl-4 offset-3 offset-xl-4 text-center">
    <form method="POST">
        <h1>Cadastre-se</h1>
        <hr class="mb-4">
        <div class="row">
            <div class="form-floating mb-3 col-11">
                <input type="text" class="form-control" placeholder="Nome de Usuario" asp-for="@Model.Nome">
                <label asp-for="@Model.Nome" class="ms-3">Nome de Usuário</label>
            </div>
            <div class="col-1"><i class="bi bi-question-circle" id="nomeartista" onclick="detalhes(this)"></i></div>

            <div class="form-floating mb-3 col-11">
                <input type="text" class="form-control" placeholder="Nome de Usuario" asp-for="@Model.Telefone">
                <label asp-for="@Model.Telefone" class="ms-3">Telefone</label>
            </div>
            <div class="col-1"><i class="bi bi-question-circle" id="telefone" onclick="detalhes(this)"></i></div>

            <div class="form-floating mb-3 col-11">
                <input type="email" class="form-control" placeholder="E-mail" asp-for="@Model.Email">
                <label asp-for="@Model.Email" class="ms-3">E-mail</label>
            </div>
            <div class="col-1"><i class="bi bi-question-circle" id="email" onclick="detalhes(this)"></i></div>

            <div class="mb-3 col-11">
                <textarea placeholder="Biografia" class="form-control" asp-for="@Model.Biografia" rows="3"></textarea>
            </div>
            <div class="col-1"><i class="bi bi-question-circle" id="biografia" onclick="detalhes(this)"></i></div>

            <div class="form-floating mb-3 col-11">
                <input type="password" class="form-control" placeholder="Duração" asp-for="@Model.Senha">
                <label asp-for="@Model.Senha" class="ms-3">Senha</label>
            </div>
            <div class="col-1"><i class="bi bi-question-circle" id="senha" onclick="detalhes(this)"></i></div>
        </div>


        <button class="btn botao my-3" type="submit">Cadastrar</button>

    </form>
</div>

<script src="~/js/detalhes.js" defer></script>