@model Ouvinte;

<div class="col-6 col-xl-4 offset-3 offset-xl-4 text-center">

    <form method="POST">

        <h1>Cadastre-se</h1>
        <hr class="mb-4">
        <div class="row">
            <div class="form-floating mb-3 col-11">
                <input type="text" class="form-control" placeholder="Nome de Usuario" asp-for="@Model.Nome">
                <label asp-for="@Model.Nome" class="ps-4">Nome de Usuário</label>
            </div>
            <div class="col-1"><i class="bi bi-question-circle" id="nome" onclick="detalhes(this)"></i></div>

            <div class="form-floating mb-3 col-11">
                <input type="text" class="form-control" placeholder="Nome de Usuario" asp-for="@Model.Telefone">
                <label asp-for="@Model.Telefone" class="ps-4">Telefone</label>
            </div>
            <div class="col-1"><i class="bi bi-question-circle" id="telefone" onclick="detalhes(this)"></i></div>

            <div class="form-floating mb-3 col-11">
                <input type="date" class="form-control" placeholder="Data de Nascimento"
                    asp-for="@Model.DataNascimento">
                <label asp-for="@Model.DataNascimento" class="ps-4">Data de Nascimento</label>
            </div>
            <div class="col-1"><i class="bi bi-question-circle" id="datanascimento" onclick="detalhes(this)"></i></div>

            <div class="form-floating mb-3 col-11">
                <input type="email" class="form-control" placeholder="E-mail" asp-for="@Model.Email">
                <label asp-for="@Model.Email" class="ps-4">E-mail</label>
            </div>
            <div class="col-1"><i class="bi bi-question-circle" id="email" onclick="detalhes(this)"></i></div>

            <div class="form-floating mb-3 col-11">
                <input type="password" class="form-control" placeholder="Duração" asp-for="@Model.Senha">
                <label asp-for="@Model.Senha" class="ps-4">Senha</label>
            </div>
            <div class="col-1"><i class="bi bi-question-circle" id="senha" onclick="detalhes(this)"></i></div>

            <div class="mb-3 col-11">
                <select class="form-select" asp-for="@Model.Genero">
                    <option selected>Gênero</option>
                    <option value="Feminino">Feminino</option>
                    <option value="Masculino">Masculino</option>
                    <option value="Outro">Outro</option>
                </select>
            </div>
            <div class="col-1"><i class="bi bi-question-circle" id="generosexual" onclick="detalhes(this)"></i></div>
        </div>

        <button class="btn botao my-3" type="submit">Cadastrar</button>
        <hr class="mb-4">

        <p>Já possui uma conta? <a asp-action="Index" asp-controller="Login" class="text-decoration-none">Faça Login</a>
        </p>
    </form>


</div>
<script src="~/js/detalhes.js" defer></script>